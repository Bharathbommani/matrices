#include<stdio.h>
 
int main()
{
float a[2][2];
float b[2][2],c[2][2];
int i,j;
printf("\n enter elements of 1st matrix");
 
for(i=0;i<2;i++)
{
for(j=0;j<2;j++)
{
scanf("%f",&a[i][j]);
}
}
printf("\n enter elements of 2nd matrix");
for(i=0;i<2;i++)
{
for(j=0;j<2;j++)
{
scanf("%f",&b[i][j]);
}
}
printf("\n Result of adding two matrix is\n");
for(i=0;i<2;i++)
{
for(j=0;j<2;j++)
{
 
c[i][j]=a[i][j]+b[i][j];
}
}
 
for(i=0;i<2;i++)
{
for(j=0;j<2;j++)
{
printf("\t%.1f",c[i][j]);
}
printf("\n");
}
return 0;
}
